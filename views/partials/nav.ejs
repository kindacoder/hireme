            <%= error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times</span>
                            </button>
        </div>
    </div>


    <% } %>


        <% if(error_msg && error_msg.length > 0) { %>
            <div class="container">
                <div style="margin-top:20px" class="text-center alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error_msg %>
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                              <span aria-hidden="true">&times</span>
                            </button>
                </div>
            </div>


            <% } %>
                <% if(success_msg && success_msg.length > 0) { %>
                    <div class="container">
                        <div style="margin-top:20px" class="text-center alert alert-success alert-dismissible fade show" role="alert">
